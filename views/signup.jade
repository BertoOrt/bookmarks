extends layout

block content
  main
    .container
      .signup
        form(action='/signup' method='post')
          label(for='name') Name: 
          input(type='text' name='name' id='name')
          label(for='password') Password: 
          input(type='password' name='password' id='password')
          input.show(type='submit' value='signup')
      a.button.submit(href='/') back      
