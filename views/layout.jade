doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
  body
    header
      .container
        .header
          .title
            a.left(href='/') bookmarks
          .nav
            if userId
              .col.right
                a(href='/logout') logout
              .col.right
                a(href='/users/'+ userId) my favs 
              .col.right
                a(href='/users/'+ userId + '/bookmarks') my bookmarks 
            else
              .col.right
                a(href='/login') login
              .col.right
                a(href='/signup') signup
      .subbanner
    block content
    footer
      .container
  script(src="/javascripts/client.js")
